<div class="produse">
    <h1>Produse</h1>
    <% if(produse != null) {%>
        <% produse.forEach(element => { %>
            <div id="produs">
                <p id="nume_produs">Nume produs:
                    <%- element.product_name %>
                </p>
                <p id="tip_produs">Tip aliment:
                    <%- element.type %>
                </p>
                <p id="pret_produs">
                    Preţ:
                    <%- element.price %>/
                        <%- element.measure %>
                </p>
                <form action="add-to-basket" class="auth_form" method="post">
                    <input type="hidden" value="<%- element.product_name %>" name="obiect">
                    <button id="adaugare_produs_buton" class="auth_button" onmouseover="hoverEfect()">Adăugare în coş</button>
                </form>
                <form action="/add-to-list" class="auth_form " method="post">
                    <input type="hidden" value="<%- element.product_name %>" name="obiect">
                    <button id="adaugare_produs_buton" class="auth_button" onmouseover="hoverEfect()">Adăugare în listă</button>
                </form>
            </div>
            <% }); %>
                <% } %>
</div>