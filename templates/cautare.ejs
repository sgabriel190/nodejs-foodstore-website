<% if(rezultat_cautare != null) {%>
    <div class="produse">
        <h1>Rezultate cautare</h1>
        <% rezultat_cautare.forEach(element => { %>
            <div id="produs">
                <p id="nume_produs">Nume produs:
                    <%- element.product_name %>
                </p>
                <p id="tip_produs">Tip aliment:
                    <%- element.type %>
                </p>
                <p id="pret_produs">
                    Preţ:
                    <%- element.price %>/
                        <%- element.measure %>
                </p>
                <form action="add-to-basket" class="auth_form" method="post">
                    <input type="hidden" value="<%- element.product_name %>" name="obiect">
                    <button id="adaugare_cos_buton" class="auth_button">Adăugare în coş</button>
                </form>
                <form action="/add-to-list" class="auth_form " method="post">
                    <input type="hidden" value="<%- element.product_name %>" name="obiect">
                    <button id="adaugare_lista_buton" class="auth_button">Adăugare în listă</button>
                </form>
            </div>
            <% }); %>
                <% if(rezultat_cautare.length == 0) {%>
                    <h1>Nici un rezultat gasit.</h1>
                    <% } %>
    </div>
    <% } %>